{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@core/*": ["src/core/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@application/*": ["src/application/*"],
      "@test/*": ["test/*"]
    },
    "lib": [
      "ES2020"
    ],
    "types": [
      "reflect-metadata",
      "jest",
    ],
    "alwaysStrict": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "allowJs": false,
    "moduleResolution": "node",
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ]
}
